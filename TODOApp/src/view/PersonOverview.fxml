<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.PersonOverviewController">
   <children>
      <TabPane prefHeight="400.0" prefWidth="400.0" tabClosingPolicy="UNAVAILABLE">
        <tabs>
          <Tab text="All Persons">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="272.0" prefWidth="321.0">
                     <children>
                        <Button fx:id="btnAddNewPerson" layoutX="14.0" layoutY="334.0" mnemonicParsing="false" onAction="#handleNewPerson" text="Add new person" />
                        <TableView fx:id="personTable" layoutY="6.0" prefHeight="309.0" prefWidth="400.0">
                          <columns>
                            <TableColumn fx:id="id" prefWidth="75.0" text="Id" />
                            <TableColumn fx:id="firstName" prefWidth="75.0" text="First name" />
                            <TableColumn fx:id="lastName" prefWidth="75.0" text="Last name" />
                            <TableColumn fx:id="login" prefWidth="75.0" text="Login" />
                            <TableColumn fx:id="password" prefWidth="75.0" text="Password" />
                          </columns>
                        </TableView>
                        <Button fx:id="btnDeletePerson" layoutX="225.0" layoutY="334.0" mnemonicParsing="false" onAction="#handleDeletePerson" prefHeight="24.0" prefWidth="96.0" text="Delete person" />
                        <Button fx:id="btnEditPerson" layoutX="118.0" layoutY="334.0" mnemonicParsing="false" onAction="#handleEditPerson" prefHeight="24.0" prefWidth="82.0" text="Edit person" />
                     </children>
                  </AnchorPane>
            </content>
          </Tab>
          <Tab text="All Tasks">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
            </content>
          </Tab>
        </tabs>
      </TabPane>
   </children>
</AnchorPane>
